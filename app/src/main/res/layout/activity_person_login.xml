<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cardview_light_background"
    tools:context=".PersonLoginActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textSize="16dp"
            android:text="Enter information for your Card:">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/Color_blue_light"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Name"
                    android:layout_marginHorizontal="8dp"
                    android:paddingTop="12dp"
                    android:textAlignment="center"
                    android:layout_marginTop="20dp"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/common_google_signin_btn_icon_dark"
                    android:layout_gravity="center"
                    android:layout_margin="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Upload Image"/>

                <EditText
                    android:id="@+id/personreviousCompanies"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:paddingTop="12dp"
                    android:textSize="18sp"
                    android:layout_marginBottom="30dp"
                    android:hint="Current/Previous Companies" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <EditText
                        android:id="@+id/profileJobTitle"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Job Title"
                        android:textSize="20sp"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:layout_marginTop="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/personQualification"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:layout_marginTop="20dp"
                            android:text="Qualification     :"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                        <EditText
                            android:id="@+id/qualificationsText"
                            android:layout_width="0dp"
                            android:layout_marginTop="20dp"
                            android:layout_height="50dp"
                            android:layout_weight="4"
                            android:textSize="16sp"
                            android:hint="Qualification" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/personSkills"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:layout_marginTop="20dp"
                            android:text="Skills                  :"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                        <EditText
                            android:id="@+id/skillsText"
                            android:layout_width="0dp"
                            android:layout_marginTop="20dp"
                            android:layout_height="50dp"
                            android:layout_weight="4"
                            android:textSize="16sp"
                            android:hint="Skills" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/personExperience"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:layout_marginTop="20dp"
                            android:text="Experience        :"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                        <EditText
                            android:id="@+id/experienceText"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_weight="4"
                            android:textSize="16sp"
                            android:layout_marginTop="20dp"
                            android:hint="Experience" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/personLocation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:layout_marginTop="20dp"
                            android:text="Location            :"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                        <EditText
                            android:id="@+id/locationText"
                            android:layout_width="0dp"
                            android:layout_marginTop="20dp"
                            android:layout_height="50dp"
                            android:layout_weight="4"
                            android:hint="Location"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/personProjects"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="Projects :"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                    <EditText
                        android:id="@+id/projectsText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingTop="8dp"
                        android:layout_marginTop="10dp"
                        android:hint="Projects"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textIsSelectable="true"
                        tools:ignore="TextContrastCheck" />

                    <TextView
                        android:id="@+id/personResponsibilites"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="Responsibilities Handled :"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                    <EditText
                        android:id="@+id/responsibilitiesText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingTop="8dp"
                        android:layout_marginTop="10dp"
                        android:hint="Responsibilities"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textIsSelectable="true"
                        tools:ignore="TextContrastCheck" />

                    <TextView
                        android:id="@+id/personHobbies"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="Hobbies :"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                    <EditText
                        android:id="@+id/hobbiesText"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingTop="8dp"
                        android:layout_marginTop="10dp"
                        android:hint="Hobbies"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:textIsSelectable="true"
                        tools:ignore="TextContrastCheck" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>